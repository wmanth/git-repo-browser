    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server/dist/server.js",
            "preLaunchTask": "tsc: build - server/tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/server/dist/**/*.js"
            ],
            "env": {"REPO_HOME": "${workspaceFolder}/repos"}
        }
    ]
}
